	i=-1
	suma=0
	Mientras num1<>0 Hacer
		
		Escribir "Ingrese un numero: "
		leer num1
		suma=suma+num1
		i=i+1
		
	
	FinMientras
	
	media=suma/i
	
	Escribir "La suma de todos los numeros introducidos es: " suma
	Escribir "La media de todos los numeros introducidos es: " media

